
<div class="page-wrapper">

  <h1 class="title">
    Hi, <%= @user.username %>
  </h1>
  
  <p class="date">
    <%= link_to "Edit", edit_user_path(@user) %>
    | <%= link_to "Delete", post_path(@user), method: :delete, data: { confirm: "Are you sure?"} %>
  </p>
  
  <p class="body">
    Contact: <%= @user.email %>
  </p>


</div>